---
layout: layouts/base.njk
---
{% set resolvedAuthors = authors | resolveAuthors %}
{% set articleContent = content | addHeadingIds %}
{% set tocHeadings = articleContent | extractTocHeadings %}
{% set lastModified = page.inputPath | fileLastModified %}
<article class="max-w-none">
  <h1>{{ title }}</h1>

  {% if resolvedAuthors.length %}
  <div class="flex flex-wrap items-center gap-4">
    {% for author in resolvedAuthors %}
    <a class="inline-flex items-center gap-2 text-sm text-zinc-700 no-underline hover:underline" href="{{ author.url }}"
      target="_blank" rel="noreferrer">
      <img src="{{ author.pfp }}" alt="{{ author.name }}"
        class="size-10 rounded-full border border-zinc-200 object-cover" loading="lazy" />
      <span class="font-medium text-zinc-800">{{ author.name }}</span>
    </a>
    {% endfor %}
  </div>
  {% endif %}
  {% if lastModified %}
  <p class="text-sm text-zinc-600 mt-3 mb-0">Last updated: {{ lastModified | formatDateOnly }}</p>
  {% endif %}
  {% if summary %}
  <p class="italic mt-5">{{ summary }}</p>
  {% endif %}
  {% if tocHeadings.length %}
  <nav class="mt-6 rounded-lg border border-zinc-200 bg-zinc-100/50 p-4" aria-label="On this page">
    <h2 class="text-lg mt-0 mb-2 font-body font-semibold">On this page</h2>
    <ul class="my-0 list-none pl-0">
      {% for heading in tocHeadings %}
      <li class="{% if heading.level == 3 %}ml-4{% endif %} mt-1">
        <a class="text-sm text-zinc-700 no-underline hover:underline" href="#{{ heading.id }}">{{ heading.text }}</a>
      </li>
      {% endfor %}
      {% if opinions and opinions.length %}
      <li class="mt-1">
        <a class="text-sm text-zinc-700 no-underline hover:underline" href="#opinions-from-the-community">Opinions from
          the Community</a>
      </li>
      {% endif %}
    </ul>
  </nav>
  {% endif %}
  <hr class="text-zinc-300 w-full my-10" />
  {{ articleContent | safe }}
</article>

{% if opinions and opinions.length %}
<section id="opinions-from-the-community" class="mt-12 space-y-4">
  <h2>Opinions from the Community</h2>
  {% include "opinion-cards.njk" %}
</section>
{% endif %}